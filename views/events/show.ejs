<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Leave-In</p>
            <div class="list-group">
                <li class="list-group-item active">Event Desc#1</li>
                <li class="list-group-item">Event Desc#2</li>
                <li class="list-group-item">Event Desc#3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div  class="thumbnail">
                <div  class="caption">
                    <h4>Name:<%=event.name%></h4>
                        <%if(event.isperiods){%>
                            <h4>Start Period:<%=event.startperiod%></h4>
                            <h4>End Period:<%=event.endperiod%></h4>
                        <%}else if(event.isseveraldays){%>
                                <h4>Start Date:<%=event.startdate%></h4>
                                <h4>End Date:<%=event.enddate%></h4>
                        <%}else{%>
                             <h4>Start Date:<%=event.startdate%></h4>
                         <%}%>
                    <h4>Org:<%=event.org.name%></h4>
                    <h3>Organizers-</h3>
                    <div class="list-group">
                       <%event.organizers.forEach(function(f){ %>
                            <li class="list-group-item"><%=f.username%></li>
                        <%})%>
                        
                    </div>

                    <h3>Participants-</h3>
                    <div class="list-group">
                       <%event.participants.forEach(function(f){ %>
                            <li class="list-group-item"><%=f.username%></li>
                        <%})%>
                        
                    </div>
                </div>
                
             </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>