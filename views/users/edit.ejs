<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit the profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id%>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" value="<%= user.username%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>

            <form action="/users/<%= user._id%>/flush" method="POST">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Deregister!</button>
                </div>
            </form>
            <a href="/transactions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

